{
    "name": "bezhansalleh/filament-language-switch",
    "description": "Zero config Language Switch(Changer/Localizer) plugin for filamentphp admin",
    "keywords": [
        "bezhanSalleh",
        "laravel",
        "filament-language-switch",
        "filament-language-changer",
        "filament-locale-changer",
        "filament-localizer",
        "filament-plugin",
        "filamentphp"
    ],
    "homepage": "https://github.com/bezhansalleh/filament-language-switch",
    "license": "MIT",
    "authors": [
        {
            "name": "Bezhan Salleh",
            "email": "bezhan_salleh@yahoo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.9"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "BezhanSalleh\\FilamentLanguageSwitch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BezhanSalleh\\FilamentLanguageSwitch\\Tests\\": "tests"
        }
    },
    "scripts": {
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BezhanSalleh\\FilamentLanguageSwitch\\FilamentLanguageSwitchServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
